{#=====================================================
  Thing page
  - Shows details of a single thing
  - Has a delete link to remove it
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Flask Demo - Single Thing

{% endblock %}


{% block content %}

    <h1>A Single Thing...</h1>


    <article>

        <header>
            <h3>{{ task.name }}</h3>
        </header>

        <p>Priority: <strong>{{ task.priority }}</strong></p>
        <p>Timestamp: <strong>{{task.timestamp}}</strong></p>
        <p>Complete: {{task.complete}}</p>

        <footer>
            <a href="/delete/{{ task.id }}" onclick="return confirm('Really delete?');">Delete</a>
        </footer>

    </article>


    <a role="button" href="/">Back to Home</a>

{% endblock %}

